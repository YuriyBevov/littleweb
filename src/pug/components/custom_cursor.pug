.custom-cursor-container(style="position: absolute; top: -100vh; left: -100vh;" aria-hidden="true")
  svg(style="overflow: visible;" data-amt="0.15" width="40" height="40" viewBox="0 0 40 40").cursor
    filter(id="cursor-filter")
      feTurbulence(type="fractalNoise" baseFrequency="1.5" numOctaves="5" result="turbulence")
      feDisplacementMap(in2="turbulence" in="SourceGraphic" scale="5" xChannelSelector="R" yChannelSelector="G")
    circle(filter="url(#cursor-filter)" cx="20" cy="20" r="20" stroke-width="3").cursor-inner

  svg(style="overflow: visible;" data-amt="0.20" width="40" height="40" viewBox="0 0 40 40").cursor
    circle(filter="url(#cursor-filter)" cx="20" cy="20" r="15" stroke-width="2").cursor-inner

  svg(style="overflow: visible;" data-amt="0.25" width="40" height="40" viewBox="0 0 40 40").cursor
    circle(filter="url(#cursor-filter)" cx="20" cy="20" r="10" stroke-width="2").cursor-inner

  svg(style="overflow: visible;" data-amt="0.30" width="40" height="40" viewBox="0 0 40 40").cursor
    circle(filter="url(#cursor-filter)" cx="20" cy="20" r="5" stroke-width="2").cursor-inner